<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.sportevent.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/login"
        android:name="com.example.sportevent.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_loginEmail"
            app:destination="@id/loginEmail" />
        <action
            android:id="@+id/action_login_to_createUser"
            app:destination="@id/createUser" />
    </fragment>
    <fragment
        android:id="@+id/loginEmail"
        android:name="com.example.sportevent.LoginEmail"
        android:label="fragment_login_email"
        tools:layout="@layout/fragment_login_email" />
    <fragment
        android:id="@+id/createUser"
        android:name="com.example.sportevent.CreateUser"
        android:label="fragment_create_user"
        tools:layout="@layout/fragment_create_user" />
</navigation>